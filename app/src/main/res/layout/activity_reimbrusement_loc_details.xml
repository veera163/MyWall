                        android:gravity="center_vertical"
                        android:text="@string/mandal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/txt_mandel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.62"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_separator_color" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingBottom="@dimen/margin_5"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.38"
                        android:gravity="center_vertical"
                        android:text="@string/village"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15" />
                    <TextView
                        android:id="@+id/txt_village"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.62"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_separator_color" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/margin_10"
                android:id="@+id/txt_sanctioned_details"
                android:text="@string/sanctioned_details"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sanctioned_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/margin_10"
                android:text="@string/remarks"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@drawable/spinner_popup_background"
                android:gravity="top|left"
                android:hint="@string/remarks"
                android:inputType="textMultiLine|textCapWords|textCapSentences"
                android:lines="7"
                android:maxLines="20"
                android:minLines="5"
                android:padding="@dimen/margin_7"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/create_contact_text_font_size" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_view"
                android:layout_margin="@dimen/margin_10"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingBottom="@dimen/margin_5">

                    <TextView
                        android:id="@+id/path"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_20"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">
                <Button
                    android:id="@+id/create_contact_reset_button"
                    android:layout_width="150dp"
                    android:layout_height="?actionBarSize"
                    android:background="@drawable/btn_rounded_primary"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/create_contact_save_button"
                    android:layout_width="150dp"
                    android:layout_height="?actionBarSize"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/btn_rounded"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:text="@string/update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
